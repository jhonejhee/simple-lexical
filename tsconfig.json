{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "jsx": "react-jsx",
        "moduleResolution": "nodenext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}